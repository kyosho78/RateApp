@model RateApp.Models.SupplierRatingViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-group">
    @Html.LabelFor(model => model.RatingValue)
    @Html.TextBoxFor(model => model.RatingValue, new { @class = "form-control", type = "number", min = "1", max = "5" })
    @Html.ValidationMessageFor(model => model.RatingValue)
</div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment)
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Comment)
    </div>

    <!-- Hidden fields for SupplierId and RaterId -->
    @Html.HiddenFor(model => model.SupplierId)
    @Html.HiddenFor(model => model.RaterId) <!-- Ensure RaterId is passed back -->

    <button type="submit" class="btn btn-primary">Save</button>
}
