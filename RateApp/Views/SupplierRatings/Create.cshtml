@model RateApp.Models.SupplierRatingViewModel

@{
    ViewBag.Title = "Create Supplier Rating";
}

<h2>Create Supplier Rating</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("OTP")
        @Html.TextBox("OTP", null, new { @class = "form-control" })
        <p class="text-muted">Please enter the OTP you received from the supplier.</p>
        @Html.ValidationMessage("OTP")
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.RatingValue)
        @Html.EditorFor(model => model.RatingValue, new { htmlAttributes = new { @class = "form-control", @type = "number", min = "1", max = "5" } })
        @Html.ValidationMessageFor(model => model.RatingValue)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment)
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Comment)
    </div>

    <button type="submit" class="btn btn-primary">Submit Rating</button>
}
