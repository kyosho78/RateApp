@{
    ViewBag.Title = "GenerateOTP";
}

<h2>Sinun kertakäyttöinen koodisi</h2>
<p>Jaa tämä koodi henkilölle joka haluaa antaa sinulle arvostelun.</p>

<h3 id="otpText">@ViewBag.GeneratedOTP</h3> <!-- Display OTP with id for easy copy -->

<button onclick="copyToClipboard()">Kopio koodi</button>

<p>Koodi on voimassa yhden vuorokauden!</p>

<script>
    function copyToClipboard() {
        var otpText = document.getElementById("otpText").innerText;
        navigator.clipboard.writeText(otpText).then(function () {
            alert('Koodi kopioitu työpöydälle!');
        }, function (err) {
            alert('Kopio virhe!: ' + err);
        });
    }
</script>
