@{
    ViewBag.Title = "GenerateOTP";
}

<h2>Your One-Time Password (OTP)</h2>
<p>Share this OTP with the person who will be rating you:</p>

<h3 id="otpText">@ViewBag.GeneratedOTP</h3> <!-- Display OTP with id for easy copy -->

<button onclick="copyToClipboard()">Copy OTP</button>

<p>This OTP will expire in 1 day</p>

<script>
    function copyToClipboard() {
        var otpText = document.getElementById("otpText").innerText;
        navigator.clipboard.writeText(otpText).then(function () {
            alert('OTP copied to clipboard');
        }, function (err) {
            alert('Error copying OTP: ' + err);
        });
    }
</script>
