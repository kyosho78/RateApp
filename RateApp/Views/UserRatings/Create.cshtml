@model RateApp.Models.UserRatings

@{
    ViewBag.Title = "Create";
}

<h2>Create User Rating</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.UserId, "User")
        @Html.DropDownListFor(model => model.UserId, (SelectList)ViewBag.UserId, "Select User", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RatingValue)
        @Html.EditorFor(model => model.RatingValue, new { htmlAttributes = new { @class = "form-control", @type = "number", min = "1", max = "5" } })
        @Html.ValidationMessageFor(model => model.RatingValue)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment)
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Comment)
    </div>

    <button type="submit" class="btn btn-primary">Submit Rating</button>
}

